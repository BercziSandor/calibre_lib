        <dc:title>A terrorizmus</dc:title>
        <dc:creator opf:file-as="Barker, Jonathan" opf:role="aut">Jonathan Barker</dc:creator>
        <dc:contributor opf:file-as="calibre" opf:role="bkp">calibre (6.10.0) [https://calibre-ebook.com]</dc:contributor>
