        <dc:title>A Mester és Margarita</dc:title>
        <dc:creator opf:file-as="Bulgakov, Mihail" opf:role="aut">Mihail Bulgakov</dc:creator>
        <dc:contributor opf:file-as="calibre" opf:role="bkp">calibre (6.10.0) [https://calibre-ebook.com]</dc:contributor>
