        <dc:title>Életrevalók</dc:title>
        <dc:creator opf:file-as="Borgo, Philippe Pozzo Di" opf:role="aut">Philippe Pozzo Di Borgo</dc:creator>
        <dc:contributor opf:file-as="calibre" opf:role="bkp">calibre (6.10.0) [https://calibre-ebook.com]</dc:contributor>
